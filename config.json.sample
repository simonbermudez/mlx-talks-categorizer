{
  "min_duration_minutes": 0.01,
  "supported_formats": [
    ".mp3",
    ".wav",
    ".mp4"
  ],
  "audio_inputs": [
    "./test/drive",
    "./test/hijack"
  ],
  "speakers_path": "./organized_talks/speakers",
  "output_base_path": "./organized_talks",
  "talks_path": "./organized_talks/talks",
  "transcripts_path": "./organized_talks/transcripts",
  "raw_talks_path": "./organized_talks/raw talks",
  "cache_dir": "./cache",
  "last_run_file": "last_run.json",
  "whisper_model": "tiny",
  "speaker_similarity_threshold": 0.80,
  "cleanup_days": 30,
  "log_level": "INFO",
  "memory_optimizations": {
    "enable_chunked_transcription": true,
    "transcription_chunk_size_seconds": 300,
    "speaker_identification_sample_seconds": 30,
    "speaker_identification_sample_offset": 60
  },
  "title_generation": {
    "method": "openai",
    "openai_api_key": "",
    "openai_model": "gpt-4o-mini",
    "max_title_words": 6,
    "fallback_to_simple": false
  },
  "pyannote": {
    "hf_token": "",
    "model": "pyannote/speaker-diarization-3.1",
    "min_speakers": 1,
    "max_speakers": 10
  }
}